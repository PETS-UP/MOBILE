<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_action_button">
        <item name="android:fontFamily">@font/signika_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:width">328dp</item>
        <item name="android:height">40dp</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="main_action_alternate_button">
        <item name="android:fontFamily">@font/signika_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/purple</item>
        <item name="android:width">328dp</item>
        <item name="android:height">40dp</item>
        <item name="cornerRadius">2dp</item>
    </style>

    <style name="secondary_action_button">
        <item name="android:fontFamily">@font/signika_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/purple</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:width">328dp</item>
        <item name="android:height">40dp</item>
        <item name="cornerRadius">2dp</item>
    </style>

    <style name="default_edit_text">
        <item name="android:padding">8dp</item>
        <item name="android:width">328dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/signika</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="default_title_text_view">
        <item name="fontFamily">@font/signika_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="default_forms_text_view">
        <item name="fontFamily">@font/signika_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>