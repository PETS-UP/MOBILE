<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/arrow_back"
        style="@style/arrow_back_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/close_button"
        style="@style/close_icon_style"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/success_icon"
            style="@style/booking_closing_icon"
            android:layout_width="176dp"
            android:layout_height="176dp"
            android:src="@drawable/baseline_check_circle_outline_24" />

        <TextView
            android:id="@+id/message"
            style="@style/empty_pet_list_text_view"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Agendamento realizado com sucesso!"
            android:textAlignment="center" />

        <Button
            android:id="@+id/return_button"
            style="@style/secondary_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/back_to_start" />

    </LinearLayout>

</RelativeLayout>